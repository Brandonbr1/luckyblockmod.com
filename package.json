{
    "name": "luckyblock-website",
    "version": "1.0.0",
    "description": "The official Lucky Block website",
    "main": "index.js",
    "scripts": {
        "format": "npx prettier --write .",
        "build-css": "npx sass src/css/style.scss public/style.css",
        "watch-css": "npx sass --watch src/css/style.scss public/style.css",
        "build": "npm run build-css",
        "serve": "npx ts-node src/app.ts",
        "watch": "nodemon --watch app.ts --watch src -e '.' --exec 'npm run build && npm run serve'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/alexsocha/luckyblock-website.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/alexsocha/luckyblock-website/issues"
    },
    "homepage": "https://github.com/alexsocha/luckyblock-website#readme",
    "dependencies": {
        "express": "4.17.1",
        "express-handlebars": "4.0.5",
        "glob": "7.1.6",
        "handlebars": "4.7.6",
        "js-yaml": "3.14.0",
        "marked": "1.1.0",
        "mkdirp": "1.0.4"
    },
    "devDependencies": {
        "@types/express": "4.17.6",
        "@types/express-handlebars": "3.1.0",
        "@types/glob": "7.1.2",
        "@types/js-yaml": "3.12.5",
        "@types/marked": "1.1.0",
        "@types/mkdirp": "1.0.1",
        "@types/ramda": "0.27.7",
        "husky": "4.2.5",
        "nodemon": "2.0.4",
        "prettier": "2.0.5",
        "pretty-quick": "2.0.1",
        "ramda": "0.27.0",
        "sass": "1.26.9",
        "serve": "11.3.2",
        "ts-node": "8.10.2",
        "typescript": "3.9.6"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    }
}
